<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_product_item_layout"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    >

    <TextView
        android:id="@+id/tvPromotionID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/promotionImage"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        tools:srcCompat="@tools:sample/avatars"
        android:padding="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/text"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="Code : "
            android:textAlignment="textStart" />
        <TextView
            android:id="@+id/tvPromotionCode"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textView2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="Value : "
            android:textAlignment="center" />
        <TextView
            android:id="@+id/tvPromotionValue"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:textAlignment="textEnd" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="50dp"
            android:layout_marginLeft="2dp"
            android:layout_height="match_parent"
            android:text="%"
            android:textAlignment="textStart" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tvPromotionStartDate"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textAlignment="textStart" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:text=" - "
            android:textAlignment="textStart" />
        <TextView
            android:id="@+id/tvPromotionIssuedDate"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textAlignment="textStart" />
    </LinearLayout>



    <android.widget.Button
        android:id="@+id/btnUseVoucher"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/custom_button"
        android:layout_marginLeft="45dp"
        android:text="Use"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />


</LinearLayout>


